<div class='blog-contents'>
  <span class='new-article'><%= @blog.genre.name %></span>
  <% if @blog.blank? %>
    投稿はありません。
  <% else %>
    <div class='blog-lists' >
      <div class='article-list'>
        <% @blogs.each do |blog| %>
          <div class='list'>
            <%= link_to blog_path(blog.id), class: 'blog-title-img' do %>
              <div>
                <%= image_tag blog.image.variant(resize: '120x120') %>
              </div>
              <div class='blog-title'>
                <%= blog.title %>
                <div class='blog-description'><%= blog.description %></div>
                <div class='blog-date'><%= blog.created_at.strftime("投稿日：%Y/%m/%d") %></div>
              </div>

            <% end %>
          </div>
        <% end %>
      </div>
      <%= render "site_right" %>
    </div>
    <div class="social">
      <a href="https://twitter.com/share?&text=[MochaBlog]&hashtags=MochaBlog" rel="nofollow" target="_blank"><i class="fa-brands fa-twitter"></i></a>
      <a href="http://line.me/R/msg/text/?%0a[MochaBlog]" target="_blank" rel="nofollow noopener"><i class="fa-brands fa-line"></i></a>
    </div>
  <% end %>

</div>
<%= content_for(:title, @blog.genre.name) %>